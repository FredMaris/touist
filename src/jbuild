#|
- to search for missing rules in parser.messages:
  jbuilder build @src/lib/missing
- to build bytecode
  jbuilder build src/touist.bc
- to build native
  jbuilder build src/touist.bc
- to build the js
  jbuilder build src/lib/touist
|#

(jbuild_version 1)

(executable
 ((name touist)
  (libraries (re touist touist.qbf touist.yices2)))
)

(executable
 ((name touistjs)
  (libraries (yojson js_of_ocaml.ppx ppx_deriving_yojson re touist))
  )
)

(install
 ((section bin)
  (files ((touist.exe as touist)))))
