(jbuild_version 1)

(executable
 ((name touist)
  (libraries (touist touist.qbf touist.yices2))
  (preprocess (action (run ${bin:cppo}
    -V OCAML:${ocaml_version}
    -D "HAS_YICES2 ${lib-available: touist.yices2}"
    -D "HAS_QBF ${lib-available: touist.yices2}"
    ${<})))
 )
)
(install
 ((section bin)
  (files ((touist.exe as touist)))))